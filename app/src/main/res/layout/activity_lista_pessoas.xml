<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rodrigosilva.projetodoestudo.ListaPessoasActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lista_pessoa"></ListView>

    <Button
        android:id="@+id/btn_adicionar_pessoa"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/botao_redondo"
        android:elevation="8dp"
        android:text="+"
        android:textSize="22sp"
        tools:layout_alignParentRight="true"
        android:layout_margin="10dp"/>

</RelativeLayout>
